@using DeckSorter.Models.ViewModels
@model DeckViewModel
@{
	ViewData["Title"] = "Deck Detail";
}
<link rel="stylesheet" href="~/css/cardslist.css" />
<h3>Колода "@Model.Name"</h3>
<form class="update" asp-action="SimpleShuffle" asp-controller="Home" asp-anti-forgery="true" method="post">
		<input type="hidden" name="deckId" value=@Model.Id>
		<input class="submit-button" type="submit" value="Перетасовать" />
</form>
<div class="cardsregion">
			@for (int i = 0; i < Model.Cards.Length; i++)
			{
				string imagePath = "../cards/" + Model.Cards[i] + ".png";
				<div class="cardblock">
					<div class="cardimagediv">
						<img src=@imagePath alt="">
					</div>
					<span class="name">@(i+1)</span>				
				</div>
			}
</div>
